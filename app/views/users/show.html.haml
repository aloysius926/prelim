%table.table.table-bordered.table-condensed
  %thead
    %tr 
      %th
      %th{colspan: "26"} Micro
    %tr
      %th
      %th{colspan: "13"} Fall
      %th{colspan: "13"} Spring
    %tr
      %th
      - 2.times do
        %th{colspan: "3"} 1st Mini
        %th{colspan: "3"} 2nd Mini
        %th{colspan: "3"} 3rd Mini
        %th{colspan: "4"} 4th Mini
    %tr
      %th Year
      - 2.times do
        %th 1-1
        %th 1-2
        %th 1-3
        %th 2-1 
        %th 2-2
        %th 2-3
        %th 3-1 
        %th 3-2
        %th 3-3
        %th 4-1 
        %th 4-2
        %th 4-3
        %th 4-4
  %tbody
    - 2013.downto(2000) do |yr|
      %tr
        %td= yr
        - ["Fall", "Spring"].each do |term|
          - (1..4).each do |first|
            - (1..3).each do |second|
              %td= link_to_question(yr,term,"#{first}-#{second}",current_user.id,1)
          %td= link_to_question(yr,term,"4-4",current_user.id,1) 
  %tfoot
