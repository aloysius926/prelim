.hero-unit
  %h1 Question
  = render 'finished_questions/form'
  %h3 Tags
  - @question.tags.each do | tag |
    = tag.tags
  %h3 Dates Asked
  - @question.sittings.each do | sitting |
    = sitting.print_sitting
  = link_to 'Add Sitting', new_question_sitting_path(@question)

  %h3 Overal Question Rating
  = render 'question_ratings/table'
  = render 'question_ratings/form' 
  = link_to 'Add Question Rating', new_question_question_rating_path(@question)

  %h2 Answers

  %table.table 
    %thead
      %tr
        %th Overall 
        %th Clarity
        %th Detail
        %th Correctness
        %th Answer PDF
        %th User Name
        %th Review Answer
    %tbody
      - @question.answers.each do |answer|
        %tr
          %td= answer.overall
          %td= answer.clarity
          %td= answer.detail
          %td= answer.correctness
          %td= link_to("Download",answer.pdf.url)
          %td= answer.user.name
          %td= link_to 'More info', question_answer_path(:id => answer.id, :question_id => answer.question.id)
  = form_for([@question, @question.answers.build]) do |f|
    = f.label  :file
    = f.file_field  :pdf
  
    = f.submit
    
  = link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' }